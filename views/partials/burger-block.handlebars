<li class="list-group-item">
	<div class="row">
		<div class="col-6 d-flex justify-content-center">
			<h6 class="burger-names">{{burger_name}}</h6>
		</div>

		<div class="col-6 d-flex justify-content-center">
			<button class="btn btn-success change-state" data-id="{{id}}" data-state="{{avail}}">
				{{#if avail}}Devour it!{{else}}Eat again!{{/if}}
			</button>
			<button class="btn btn-danger delete-burger" data-id="{{this.id}}">
				<i class="far fa-times-circle"></i>
			</button>
		</div>
	</div>
</li>